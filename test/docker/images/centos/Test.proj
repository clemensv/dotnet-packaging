<Project>
  <!-- <Import Project="..\..\..\version.props" /> -->
  <PropertyGroup>
    <OutputType>None</OutputType>
  </PropertyGroup>
  <Target Name="PublishTestProjects">
       <MSBuild Projects="../../testprojects/clifdd/src/clifdd.csproj" 
       Targets="PackageRpm"
       Properties="RuntimeIdentifier=centos-x64">
          <Output TaskParameter="Package" ItemName="FddPackage" />  
       </MSBuild>
       <MSBuild Projects="../../testprojects/cliscd/src/cliscd.csproj" 
       Targets="PackageRpm"
       Properties="RuntimeIdentifier=centos-x64">
          <Output TaskParameter="Package" ItemName="ScdPackage" />  
       </MSBuild>
  </Target>
  <Target Name="Build">
      <Exec Command="build.cmd $(BuildNumber) $(VersionPrefix) $(VersionSuffix) $(TargetFramework)" Condition="'$(OS)'=='Windows_NT'"/>
      <Exec Command="bash ./build.sh $(BuildNumber) $(VersionPrefix) $(VersionSuffix) $(TargetFramework)" Condition="'$(OS)'=='Unix'"/>
  </Target>
  <Target Name="VSTest" DependsOnTargets="PublishTestProjects">
      <Exec Command="test.cmd"  Condition="'$(OS)'=='Windows_NT'"/>
      <Exec Command="bash ./test.sh" Condition="'$(OS)'=='Unix'"/>
  </Target>
  <Target Name="Clean">
      <Exec Command="clean.cmd" Condition="'$(OS)'=='Windows_NT'"/>
      <Exec Command="bash ./clean.sh" Condition="'$(OS)'=='Unix'"/>
  </Target>
</Project>